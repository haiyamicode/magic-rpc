{
  "name": "magic-rpc",
  "version": "1.1.0",
  "private": true,
  "description": "Magic RPC monorepo with server and client packages",
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "example": "yarn workspace example dev",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check . --write",
    "precommit": "biome check . --write && turbo run type-check",
    "npm-publish": "yarn build && turbo run npm-publish"
  },
  "keywords": [
    "rpc",
    "resolver",
    "dataloader",
    "graphql-like",
    "typescript",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.0",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "^6.1.1",
    "ts-node": "^10.9.2",
    "turbo": "^2.5.6",
    "typescript": "^5.0.0"
  }
}
